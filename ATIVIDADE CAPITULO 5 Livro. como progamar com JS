//9 atividade //
const entrada16 = prompt("digite sua idade:");
const entrada17 = prompt("digite seu altura:");
const entrada18 = prompt("digite seu peso:");


const idade = Number(entrada16);
const altura = Number(entrada17);
const peso = Number(entrada18);


const IMC = peso/idade*altura;


if( IMC < 18 ){
    console.log("classificaçao= MAGREZA");
} else if (   18,5 <= IMC <= 24,9){
    console.log("classificção= NORMAL");
} else if ( 30 <= IMC <= 34,9 ){
    console.log("classificaçao= OBESIDADE 1");
} else if ( 35 <= IMC <= 39,9){
    console.log(" classificaçao: OBESIDADE 2");
} else if ( IMC >= 40){
    console.log("classificaçao= OBESIDADE 3");
}






