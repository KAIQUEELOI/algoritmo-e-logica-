//12 atividade //
const entrada19= parseInt(prompt("escreva um numero natural >0 "));


const F = (entrada19);
let fatorial =1;


if(F>= 0){
    for(let i=1; i<=F; i++){
        fatorial *=i;
    }
    console.log("o fatorial do seu numero é:", + fatorial );
}
