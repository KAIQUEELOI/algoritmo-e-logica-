// 7 atividade //
const entrada12 = prompt("digite o 1 lado do triangulo");
const entrada13 = prompt("digite o 2 lado do triangulo");
const entrada14 = prompt("digite o 3 lado do triangulo");


const l1=Number(entrada12);
const l2=Number(entrada13);
const l3=Number(entrada14);


if( l1 == l2 == l3){
    console.log("o triangulo é EQUILATERO");
} else if (l1 == l2 != l3 ){
    console.log("o triangulo é ISOCELES ");
} else if( l1 != l2 != l3){
    console.log("o triangulo é ESCALENO");


}


// 7 atividade //
const entrada12 = prompt("digite o 1 lado do triangulo");
const entrada13 = prompt("digite o 2 lado do triangulo");
const entrada14 = prompt("digite o 3 lado do triangulo");


const l1=Number(entrada12);
const l2=Number(entrada13);
const l3=Number(entrada14);


if( l1 == l2 == l3){
    console.log("o triangulo é EQUILATERO");
} else if (l1 == l2 || l2 == l3 ){
    console.log("o triangulo é ISOCELES ");
} else if( l1 != l2 != l3){
    console.log("o triangulo é ESCALENO");


}






